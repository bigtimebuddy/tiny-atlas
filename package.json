{
  "name": "tiny-atlas",
  "version": "1.0.0",
  "description": "Terse, embeddable spritesheet atlas format",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "run-s watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prebuild": "run-s format:check clean",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "run-s build",
    "clean": "rimraf dist",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "preversion": "run-s build",
    "postversion": "git push && git push --tags"
  },
  "clean-package": {
    "indent": 2,
    "remove": [
      "prettier",
      "scripts",
      "clean-package",
      "devDependencies"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "keywords": [
    "spritesheet",
    "textures",
    "formats",
    "atlas",
    "animation",
    "png"
  ],
  "author": "Matt Karl <hello@mattkarl.com>",
  "license": "MIT",
  "homepage": "https://github.com/bigtimebuddy/tiny-atlas#readme",
  "bugs": {
    "url": "https://github.com/bigtimebuddy/tiny-atlas/issues"
  },
  "devDependencies": {
    "clean-package": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist"
  ]
}
